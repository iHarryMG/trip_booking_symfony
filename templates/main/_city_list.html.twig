
{% if result is not null %}
    
        {% if is_one_item == 1 %}    
            {% for item in result %}
                <a href="{{ path('get_hotel', { 'city_id': item.id, 'country_id': item.country_id} ) }}">
                    <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-3@m">
                        <li class="one-item">
                            <div class="uk-panel">
                                <img src="{{ asset('leisure/images') ~ item.city_img }}" alt="" style="width: 100%; height: 100%;">
                                <p>{{ item.city_name }}</p>
                            </div>
                        </li>
                    </ul>
                </a>
            {% endfor %}
        {% else %}
            <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-3@m">
                
                {% for item in result %}
                    <li>
                        <div class="uk-panel">
                            <a href="{{ path('get_hotel', {'city_id': item.id, 'country_id': item.country_id } ) }}">
                                <img src="{{ asset('leisure/images') ~ item.city_img }}" alt="">
                                <p>{{ item.city_name }}</p>
                            </a>
                        </div>
                    </li>
                
                {% endfor %}
            </ul>
        {% endif %}   
                
{% endif %}