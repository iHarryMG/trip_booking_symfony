{% extends 'main/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/hotel_detail.css">
    <style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 40%;
        }
        .info-item{
            float: left;
            padding-top: 10px;
        }
        .info-title{
            font-size: 16px;
            color: #999;
        }
        .info-list-item p {
            margin: 0;
            font-size: 16px;
            line-height: 18px;
        }
        .info-title {
            font-weight: lighter;
        }
        h3.title{
            margin: 10px 0 15px 0;
            font-family: Roboto Condensed;
            font-style: normal;
            font-weight: 300;
            font-size: 18px;
            line-height: 27px;
            text-align: center;
            text-transform: uppercase;
            color: #0075FF;
            padding: 0 40px;
        }
        .jumbotron {
            padding-bottom: 70px;
            margin-top: 0;
            height: 95%;
        }
        .info-advise{
            height: 92%;
            overflow-x: scroll;
        }
        .site-wrapper{
            width: auto;
            height: 100%;
        }
        .container{
            height: 100%;
            margin-top: 62px;
        }
    </style>
{% endblock %}

{% block navbar %}  
    <header id="header">
        <nav class="navbar navbar-expand-md bg-dark mb-3 col-12 col-md-12">
            <div class="header-brand-logo">
                <a href="#">
                    <img class="logo" src="/leisure/images/logo_white.png">
                </a>
            </div>
        </nav>
    </header>
{% endblock %}

{% block body %}

<div class="jumbotron col-12 col-md-12">
    <h3 class="title">Travel Advise</h3>
    <div class="info-advise">
        {% include '/main/_advice_content.html.twig' %}
    </div>
</div>

{% endblock %}
